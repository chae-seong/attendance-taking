<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Student Attendance Details</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            margin: 20px;
        }

        h1 {
            color: black;
            margin: 0;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        form {
            margin-top: 20px;
        }

        button {
            background-color: #007bff;
            color: #fff;
            padding: 8px 12px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        a {
            text-decoration: none;
            color: black;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
<div class="header">
  <h1>Student Attendance</h1>
  <a href="/admin">Return</a>
</div>
{{if .}}
    <table border="1">
        <tr>
            <th>Student ID</th>
            <th>Name</th>
            <th>Attendance</th>
        </tr>
        {{range .}}
        <tr>
            <td>{{.StudentID}}</td>
            <td>{{.Name}}</td>
            <td>{{.Attendance}}</td>
        </tr>
        {{end}}
    </table>
    <form action="/exportAttendance" method="post">
        <button type="submit">Export Attendance</button>
    </form>
{{else}}
    <p>No student data available.</p>
{{end}}

</body>
</html>